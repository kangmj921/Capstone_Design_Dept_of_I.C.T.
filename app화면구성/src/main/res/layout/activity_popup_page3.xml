<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="600dp"
    tools:context=".PopupActivityPage3"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="97dp"
            android:layout_height="99dp"
            android:src="@drawable/guide1" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="1.첫 번째 서비스 이용하기 화면에서 Go 버튼을 누르세요. "
            android:textColor="#000"
            android:textSize="15dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="99dp"
            android:src="@drawable/guide2" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="2. 원하는 시간을 선택하여 중구 내 최적의 순찰경로를 확인할 수 있습니다."
            android:textColor="#000"
            android:textSize="15dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="99dp"
            android:src="@drawable/guide3" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="3. 나침반 모양의 버튼을 클릭하면 경로상의 현재 내 위치를 알 수 있습니다. "
            android:textColor="#000"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="154dp"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="15dp"
            android:onClick="closeButton"
            android:text="닫기"
            android:textSize="20dp"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />


    </RelativeLayout>


</RelativeLayout>